<launch>
    <arg name="points_src" default="points_raw"/>
    <arg name="points_out" default="detection/lidar_detector/points_cluster" />
    <arg name="objects_out" default="detection/lidar_detector/objects" />

    <arg name="network_definition_file"
         default="/home/ohashi/test_perception/src/packages/perception/lidar_detector/packages/lidar_apollo_cnn_seg_detect/models/velodyne64/deploy.prototxt"/>
    <arg name="pretrained_model_file"
         default="/home/ohashi/test_perception/src/packages/perception/lidar_detector/packages/lidar_apollo_cnn_seg_detect/models/velodyne64/deploy.caffemodel"/>

    <arg name="score_threshold" default="0.5"/>
    <arg name="use_gpu" default="true"/>
    <arg name="gpu_device_id" default="0"/>
    <arg name="marker_display_duration" default="0.1"/>
    <arg name="output" default="screen"/>

    <node pkg="lidar_apollo_cnn_seg_detect" type="lidar_apollo_cnn_seg_detect" name="lidar_apollo_cnn_seg_detect"
          output="$(arg output)">
        <param name="network_definition_file" value="$(arg network_definition_file)"/>
        <param name="pretrained_model_file" value="$(arg pretrained_model_file)"/>
        <param name="score_threshold" value="$(arg score_threshold)"/>
        <param name="use_gpu" value="$(arg use_gpu)"/>
        <param name="gpu_device_id" value="$(arg gpu_device_id)"/>
        <param name="points_src" value="$(arg points_src)"/>
        <param name="points_out" value="$(arg points_out)" />
        <param name="objects_out" value="$(arg objects_out)" />
    </node>

    <node pkg="detected_objects_visualizer" type="visualize_detected_objects"
          name="cluster_detect_visualization"
          output="$(arg output)" ns="detection/lidar_detector">
        <param name="marker_display_duration" value="$(arg marker_display_duration)"/>
<!--        <remap from="/$(arg name_space)/detection/lidar_detector/objects" to="$(arg objects_out)"/>-->
    </node>

</launch>
